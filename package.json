{
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/cli",
    "packages/tests",
    "packages/stub"
  ],
  "scripts": {
    "build": "cd packages/core && yarn build && cd ../cli && yarn build",
    "clean": "rm -rf node_modules packages/*/dist packages/*/node_modules",
    "cli": "node packages/cli/dist/cli.js",
    "cli:debug": "env DEBUG='@zayith/*' yarn cli",
    "test": "cd packages/tests && yarn test",
    "test:manual": "yarn cli 'packages/tests/**/*.zayith.js'",
    "prepublish": "yarn build && yarn test"
  }
}
